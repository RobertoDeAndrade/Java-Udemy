package exercicios.fixacao;

import java.util.Locale;
import java.util.Scanner;

import entities.Pessoa;

public class ProblemaAlturas {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.print("Quantas pessoas serão digitadas: ");
		int n = sc.nextInt();
		Pessoa[] vet = new Pessoa[n];

		for (int i = 0; i < vet.length; i++) {
			sc.nextLine(); // Para fazer a quebra de linha
			System.out.println("Dados da " + (i + 1) + "a pessoa: ");
			System.out.print("Nome: ");
			String nome = sc.nextLine();
			System.out.print("Idade: ");
			int idade = sc.nextInt();
			System.out.print("Altura: ");
			double altura = sc.nextDouble();
			vet[i] = new Pessoa(nome, idade, altura);
		}

		System.out.println();

		double somaAltura = 0;
		double mediaAltura = 0;
		double menorDezesseis = 0;
		double porcentagemMenorDezesseis = 0;

		for (int i = 0; i < vet.length; i++) {
			somaAltura += vet[i].getAltura();
			if (vet[i].getIdade() < 16) {
				menorDezesseis++;
			}
		}

		mediaAltura = somaAltura / vet.length;
		porcentagemMenorDezesseis = (menorDezesseis * 100) / vet.length;

		System.out.printf("Altura média: %.2f\n", mediaAltura);
		System.out.println("Pessoas com menos de 16 anos: " + porcentagemMenorDezesseis + "%");

		for (int i = 0; i < vet.length; i++) {
			if (vet[i].getIdade() < 16) {
				System.out.println(vet[i].getNome());
			}
		}

		sc.close();
	}
}