package exercicios.fixacao;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;
import java.util.stream.Collectors;

import exemplos.aula.Employee;

public class ExercicioList {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		List<Employee> list = new ArrayList<>();
		
		System.out.print("How many employees wiil be registered? ");
		int n = sc.nextInt();
		
		for (int i = 0; i < n; i++) {
			System.out.println("\nEmployee #" + (i + 1) + ":");
			System.out.print("Id: ");
			Integer id = sc.nextInt();
			sc.nextLine();
			System.out.print("Name: ");
			String nome = sc.nextLine();
			System.out.print("Salary: ");
			Double salario = sc.nextDouble();
			Employee employee = new Employee(id, nome, salario);
			list.add(employee);
		}
		
		System.out.print("Enter the employee id that will have salary increase: ");
		Integer id = sc.nextInt();
		for (int i = 0; i < n; i++) {
			if (id == list.stream().filter(x -> x.getId() == id).collect(Collectors.toList())) {
				System.out.print("Enter the percentage: ");
				Double percentage = sc.nextDouble();
			}
		}
		
		System.out.println("\nList of employees:");
		for (Employee x : list) {
			System.out.println(x);
		}
		
		sc.close();
	}

}
